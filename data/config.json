{
  "mesh": {
    "nx": 5,
    "ny": 5,
    "nz": 5,
    "dx": 0.1,
    "dy": 0.1,
    "dz": 0.1
  },

  "time": {
    "dt": 0.1,
    "t_end": 1.0
  },

  "physics": {
    "nu": 1e-5,
    "k": "sin(x)*sin(y)*sin(z) + 50.0"
  },

  "forces": {
    "fx": "0.0 * cos(pi*z)",
    "fy": "0.0 * cos(pi*y)",
    "fz": "0.0 * cos(pi*x)"
  },

  "initial_conditions": {
    "u": "20 * sin(pi*x)*cos(pi*y)",
    "v": "20 * sin(pi*z)*cos(pi*y)",
    "w": "20 * sin(pi*z)*cos(pi*x)",
    "p": "1e5"
  },

  "boundary_conditions": {
    "u": "0",
    "v": "0",
    "w": "0"
  },

  "output": {
    "enabled": true,
    "dir": "./output",
    "base_filename": "simulation_output",
    "frequency": 2
  },

  "logging": {
    "verbose": true,
    "log_to_file": false,
    "log_to_console": true,
    "filename": "simulation.log",
    "frequency": 2
  }
}
